{% extends 'base.html.twig' %}

{% block body %}

    <style>
        form {
            margin: 48px auto;
            max-width: 800px;
            display: flex;
            flex-direction: column;
        }

        input {
            width: 100%;
            padding: 16px;
            border-radius: 4px;
            border: 1px solid #c0c0c0;
            box-sizing: border-box;
        }

        label {
            font-weight: 500;
            margin: 24px 0 16px;
        }

        button {
            width: 100%;
            height: 48px;
            border-radius: 4px;
            background: #f05a2c;
            color: white;
            font-weight: 600;
            margin-top: 32px;
        }

        button:hover {
            cursor: pointer;
            background: #f3784f;
        }

        .errorflash {
            background: #dc2121;
            border-radius: 4px;
            color: white;
            margin: 48px auto;
            max-width: 800px;
            display: flex;
            justify-content: center;
            padding: 12px 0;
            font-weight: 600;
        }
    </style>

    {% if error %}
        <div class="errorflash">Erreur de connexion, v√©rifier vos informations</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <label for="username">Nom d'utilisateur :</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="_password"/>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit">Connexion</button>
    </form>
{% endblock %}